{
  "compilerOptions": {
    "target": "es2017", // Updated to support modern JavaScript
    "lib": ["dom", "es2017"], // Matching target for compatibility
    "moduleResolution": "node",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./", 
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    },
    "resolveJsonModule": true, // Enables importing JSON files
    "allowSyntheticDefaultImports": true, // For better compatibility with non-TypeScript libraries
    "noImplicitReturns": true, // Ensures functions return the correct type
    "noUnusedLocals": true, // Flags unused variables
    "noUnusedParameters": true // Flags unused function parameters
  },
  "include": [
    "frontend/src/**/*",
    "backend/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist", // Exclude output directory
    "**/*.test.ts" // Exclude test files if not needed
  ]
}
